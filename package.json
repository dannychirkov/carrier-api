{
  "name": "@shopana/novaposhta-client",
  "version": "1.0.0",
  "description": "Fully typed Nova Poshta API client for Node.js and browsers with enterprise-grade features",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "clean": "rm -rf dist",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "docs": "typedoc src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nova-poshta",
    "shipping",
    "logistics",
    "api-client",
    "typescript",
    "ukraine",
    "delivery",
    "tracking",
    "waybill"
  ],
  "author": "Nova Poshta Client Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phl-portal/novaposhta-client.git"
  },
  "bugs": {
    "url": "https://github.com/phl-portal/novaposhta-client/issues"
  },
  "homepage": "https://github.com/phl-portal/novaposhta-client#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^4.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false
}
